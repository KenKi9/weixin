.box{
  display: flex;
  justify-content: space-around;
  margin-top: 20px;
  color: #9a9a9a;

}
.time{
  display: flex;
  justify-content: space-around;
  padding: 15px 0 0 0;
  font-size: 24px;
  color: #585858

}
.ri{
  display: flex;
  justify-content: space-around;
  padding: 15px 0 0 0;
}
.ri text:first-child{
  margin-left: 30px;
  color: #9a9a9a;
  width: 90px;
  height: 30px;
  border:1px solid #9a9a9a;
  text-align: center;
  border-radius: 5px;
  line-height: 30px;
}
.ri text:last-child{
 margin-right: 40px;
  color: #9a9a9a;
  width: 90px;
  height: 30px;
  border:1px solid #9a9a9a;
  text-align: center;
  border-radius: 5px;
  line-height: 30px;
}